{
  "mcpServers": {
    "juyiting-local": {
      "command": "node",
      "args": [
        "/Users/coso/Documents/dev/ai/juyiting/juyitingmcp/dist/server.js",
        "--personas", 
        "/Users/coso/Documents/dev/ai/juyiting/juyitingmcp/examples/local-personas.json",
        "--debug"
      ],
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "true"
      }
    },
    "juyiting-global": {
      "command": "juyiting-mcp",
      "args": [
        "--personas", 
        "/Users/coso/Documents/dev/ai/juyiting/juyitingmcp/examples/local-personas.json"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    },
    "juyiting-remote": {
      "command": "node",
      "args": [
        "/Users/coso/Documents/dev/ai/juyiting/juyitingmcp/dist/server.js"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    },
    "juyiting-npx": {
      "command": "npx",
      "args": [
        "-y", 
        "juyiting-mcp-client"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    },
    "juyiting-npx-with-config": {
      "command": "npx",
      "args": [
        "-y", 
        "juyiting-mcp-client",
        "--config",
        "~/.juyiting/config.json"
      ],
      "env": {
        "NODE_ENV": "production",
        "JUYITING_CONFIG_PATH": "~/.juyiting/config.json"
      }
    }
  }
} 